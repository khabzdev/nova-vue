{
  "name": "lettuce",
  "private": true,
  "workspaces": ["packages/*", "apps/*"],
  "scripts": {
    "build": "bun run --filter '@lettuce/ui' build",
    "dev": "bun run --filter '@lettuce/ui' dev",
    "playground": "bun run --filter '@lettuce/playground' dev",
    "lint": "oxlint --ignore-path .gitignore .",
    "lint:fix": "oxlint --fix --ignore-path .gitignore .",
    "type-check": "bun run --filter '@lettuce/ui' type-check"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "oxlint": "^0.15.0",
    "typescript": "^5.7.0"
  }
}
